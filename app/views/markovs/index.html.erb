<div class="title_page">
  <span class="fa-stack">
    <i class="fa fa-square-o fa-stack-2x outer-stack"></i>
    <i class="fa fa-briefcase fa-stack-1x inner-stack"></i>
  </span>
  <span class="header_page">Markov chain</span>
  <ol class="breadcrumb">
    <li class="nonactive"> ASK</li>
    <li class="active">Markov chain List</li>
  </ol>
</div>

    <div class="panel panel-darkgrey">
      <div class="panel-head">
        <i class="fa fa-briefcase"></i>
        <span class="panel-title"><b>Markov chain List</b></span>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <div class="row">
            <div class="col-md-8">
              <%= link_to markovs_path, class: "btn btn-primary btn-sm" do %><span class="glyphicon glyphicon-plus"></span> calculate<% end %>
            
            </div>
            
          </div>
        </div>
        <div class='form-group'>
          <table class="table table-custom">
            <thead>
              <tr>
                <td>Layanan</td>
                <td>Platinum</td>
                <td>Dedicated</td>
                <td>Local Loop</td>
              </tr>
            </thead>
            <tbody>
              <% @markovs.each do |mark| %>
              <tr>
                <td><%= mark.layanan %></td>
                <td><%= mark.platinum %></td>
                <td><%= mark.dedicated %></td>
                <td><%= mark.localloop %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class='form-group'>
          <table class="table table-custom">
            <thead>
              <tr>
                <td>Layanan</td>
                <td>Platinum</td>
                <td>Dedicated</td>
                <td>Local Loop</td>
              </tr>
            </thead>
            <tbody>
              <% @markovs.each do |mark| %>
              <% total = mark.platinum + mark.dedicated + mark.localloop %>
              <tr>
                <td><%= mark.layanan %></td>
                <td><%= mark.platinum.to_f/total %></td>
                <td><%= mark.dedicated.to_f/total %></td>
                <td><%= mark.localloop.to_f/total %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class='form-group'>
          <%= form_tag markovs_path, method: "GET", remote: true do %>
            <%= label_tag :calculation_times, '', class: 'control-label' %>
            <div class='col-md-6'>
            <%= text_field_tag :times,'', class: 'form-control' %>
          </div>
            <%= submit_tag :calculate, :class => "btn btn-primary btn-sm" %>
          <% end %>
        </div>

        <div id='div_mat_table'>
          
        </div>
        <div class="pull-left"> <%#= @regressions.total %></div>
        <div align="right"><%#= paginate @cities %></div>
      </div>
    </div>